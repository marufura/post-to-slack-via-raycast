{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "post-slack-via-raycast",
  "title": "Post to Slack via Raycast",
  "description": "Post your Slack message via Raycast",
  "icon": "command-icon.png",
  "author": "yuma_takai",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "postToSlack",
      "title": "Post to Slack",
      "description": "Post messages to the slack via Raycast",
      "mode": "no-view",
      "arguments": [
        {
          "name": "message",
          "placeholder": "message",
          "required": false,
          "type": "text"
        }
      ]
    },
    {
      "name": "postToSlackByForm",
      "title": "Post to Slack by Form",
      "description": "Post messages to the slack by using form",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "Slack User Token",
      "description": "Configure your slack user token.",
      "default": ""
    },
    {
      "name": "channelId",
      "type": "textfield",
      "required": true,
      "title": "Slack Channel ID",
      "description": "Configure the Slack channel where you chat.",
      "default": ""
    },
    {
      "name": "threadTs",
      "type": "textfield",
      "required": false,
      "title": "Slack thread ts",
      "description": "Configure your slack user token.",
      "default": ""
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.70.3",
    "@slack/web-api": "^7.0.4",
    "axios": "^1.6.8",
    "dotenv": "^16.4.5",
    "form-data": "^4.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
